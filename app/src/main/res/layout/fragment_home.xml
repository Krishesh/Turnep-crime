<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Fragements.BottomNavBar.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/news_home_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/news"/>

        <TextView
            android:id="@+id/news_home_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News"
            android:layout_below="@+id/news_home_image"/>


        <ImageView
            android:id="@+id/missing_people"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/news"
            android:layout_below="@+id/news_home_text"/>

        <TextView
            android:id="@+id/missing_people_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Missing People"
            android:layout_below="@+id/missing_people"/>


        <ImageView
            android:id="@+id/crime_report"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/news"
            android:layout_below="@id/missing_people_text"/>

        <TextView
            android:id="@+id/crime_report_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crime Report"
            android:layout_below="@+id/crime_report"/>


    </RelativeLayout>


</FrameLayout>