<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Activity.AboutandFaq">

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/turnepwithlogoinabout" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="Version 1.0.0"
            android:textSize="20dp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="130dp" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="132dp"
            android:clickable="true"
            app:srcCompat="@drawable/facebookkologo12"
            android:tag="http://facebook.com/turnep"
            android:onClick="goToUrl"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/textView2"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="132dp"
            android:layout_toEndOf="@id/imageView3"
            android:layout_toRightOf="@id/imageView3"
            app:srcCompat="@drawable/instagramkologo12"
            android:clickable="true"
            android:tag="http://instagram.com/turnep"
            android:onClick="goToUrl"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="132dp"
            android:layout_toEndOf="@id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:clickable="true"
            android:onClick="goToUrl"
            android:tag="http://twitter.com/turnep"
            app:srcCompat="@drawable/twitterkologo12" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginRight="-30dp"
            android:layout_toStartOf="@id/imageView4"
            android:layout_toLeftOf="@+id/imageView4"
            android:clickable="true"
            android:textColor="@color/colorPrimary"
            android:text="@string/turnepcom"
            android:textSize="17dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="-33dp"
            android:layout_marginRight="-33dp"
            android:layout_toStartOf="@+id/imageView5"
            android:layout_toLeftOf="@+id/imageView5"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:clickable="true"
            android:textColor="@color/colorPrimary"
            android:text="@string/support"
            android:textSize="17dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="0dp"
            android:text="Â© 2017-2018 Turnep Media Co." />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Privacy Policy" />

    </RelativeLayout>

</FrameLayout>