<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News_java.Articles_news">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"

           >

            <TextView
                android:id="@+id/news_headlines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="News Headlines"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_headlines"
                android:layout_alignParentStart="true"
                android:hint="Date"

                android:textAlignment="textEnd"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/auther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_alignParentStart="true"
                android:hint="Auther"
                android:textAlignment="textEnd"
                android:textSize="15dp" />

            <ImageView

                android:id="@+id/news_images_url"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:contentDescription="newimage" />

            <TextView
                android:id="@+id/news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="news_description"
                android:textAlignment="center"
                android:textSize="17dp"
                android:layout_below="@id/news_images_url"/>


            <TextView
                android:id="@+id/news_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="content"
                android:textSize="20dp"
                android:maxLines="20"
                android:layout_below="@+id/news_description"
                />

        </LinearLayout>







    </ScrollView>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="11dp"
        app:layout_anchorGravity="bottom|end"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@android:color/holo_red_dark"
        fab:menu_colorPressed="@android:color/holo_red_light"
        fab:menu_colorRipple="@android:color/holo_red_light"
        fab:menu_fab_size="normal"
        fab:menu_icon="@android:drawable/ic_menu_close_clear_cancel"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="@android:color/white"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="@android:color/darker_gray"
        fab:menu_shadowRadius="2dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="1dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_search"
            fab:fab_label="Button 1"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/btn_star_big_on"
            fab:fab_label="Button 2"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/btn_star_big_off"
            fab:fab_label="Button 3"
            fab:fab_size="mini" />



    </com.github.clans.fab.FloatingActionMenu>



</android.support.design.widget.CoordinatorLayout>

